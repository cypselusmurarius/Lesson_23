<h2>Записаться</h2>

<form action="/visit" method="POST">

  <div class="form-group">
    <label>Ваше имя</label>
    <input name="username" type="text" class="form-control" placeholder="Введите ваше имя">
  </div>

  <div class="form-group">
    <label>Ваш телефон</label>
    <input name="phone" type="text" class="form-control" placeholder="Введите ваш телефон">
  </div>

  <div class="form-group">
    <label>Выберите парикмахера</label>
    <select class="form-control">
      <option>Jessie Pinkman</option>
      <option>Walter White</option>
      <option>Gus Fring</option>
    </select>
  </div>

  <button type="submit" class="btn btn-primary">Записаться</button>

</form>

<p>
    <%= @visitmessage %>
</p>
